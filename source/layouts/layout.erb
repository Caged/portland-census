<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Data Project" %></title>
    <script type="text/javascript">
      __datafiles = <%= Pathname.glob("#{root}/source/data/*.{csv,json}").map { |f| f.basename.to_s } %>
    </script>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "vendor", "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <h1>Portland Census Project</h1>
      <div class="controls">
        <span class="select"><select class="js-menu js-menu-subject"></select></span>
        <span class="select"><select class="js-menu js-menu-type">
          <option value="2000">2000 Totals</option>
          <option value="2010">2010 Totals</option>
          <option value="change">Total change from 2000 to 2010</option>
          <option value="growth">% change from 2000 to 2010</option>
        </select></span>
      </div>
    </header>
    <%= yield %>
    <footer>
      A civic project by Justin Palmer.
    </footer>
  </body>
</html>